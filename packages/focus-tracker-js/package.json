    },
    "./FocusTrackerConfiguration": {
      "types": "./dist/FocusTrackerConfiguration.d.ts",
      "import": "./dist/FocusTrackerConfiguration.mjs",
      "require": "./dist/FocusTrackerConfiguration.js"
    },
    "./registerFocusTrackerConfiguration": {
