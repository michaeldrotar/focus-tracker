  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "lint": "eslint . --fix --max-warnings 0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/eslint": "^8.56.5",
